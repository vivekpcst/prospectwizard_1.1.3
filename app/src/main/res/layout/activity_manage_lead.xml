<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/managelayout"
    android:background="@drawable/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:orientation="vertical"
            android:weightSum="1">

            <EditText
                android:id="@+id/lead_fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="16dp"
                android:inputType="textCapWords"
                android:lines="1"
                android:background="@drawable/text_background"
                android:hint="@string/first_name"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/lead_lname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:lines="1"
                android:padding="10dp"
                android:textSize="16dp"
                android:inputType="textCapWords"
                android:hint="@string/last_name"
                android:textColor="@color/black"
                android:background="@drawable/text_background"
                />

            <EditText
                android:id="@+id/lead_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:lines="1"
                android:inputType="textEmailAddress"
                android:textSize="16dp"
                android:hint="Email Address"
                android:textColor="@color/black"
                android:background="@drawable/text_background"
                />
            <EditText

                android:id="@+id/lead_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:lines="1"
                android:maxLength="12"
                android:textSize="16dp"
                android:hint="Phone Number"
                android:inputType="phone"
                android:textColor="@color/black"
                android:background="@drawable/text_background" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notes"/>

                <EditText
                    android:id="@+id/lead_note"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16dp"
                    android:gravity="fill_horizontal"
                    android:hint="Notes....."
                    android:textColor="@color/black"
                    android:background="@drawable/text_background"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/linear_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"

                    android:layout_marginTop="5dp"
                    android:orientation="vertical">
<HorizontalScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_height="50dp"
                            android:layout_width="50dp"
                            />
                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_height="50dp"
                            android:layout_width="50dp"
                            />
                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_height="50dp"
                            android:layout_width="50dp"
                            />
                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_height="50dp"
                            android:layout_width="50dp"
                            />
                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_height="50dp"
                            android:layout_width="50dp"
                            />
                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_height="50dp"
                            android:layout_width="50dp"
                            />
                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_height="50dp"
                            android:layout_width="50dp"
                            />
                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_height="50dp"
                            android:layout_width="50dp"
                            />

                    </LinearLayout>
</HorizontalScrollView>

                    <ViewSwitcher
                        android:id="@+id/viewSwitcher"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="5dp"
                        android:visibility="gone"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.5" >

                        <GridView
                            android:id="@+id/gridGallery"
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"
                            android:layout_gravity="top"
                            android:horizontalSpacing="2dp"
                            android:numColumns="3"
                            android:clickable="true"

                            android:padding="1dp"
                            android:scrollbars="vertical"
                            android:verticalSpacing="2dp"
                            tools:listitem="@layout/gallery_item" >
                        </GridView>

                        <ImageView
                            android:id="@+id/imgSinglePick"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:scaleType="fitXY"
                            android:layout_gravity="center"
                            android:contentDescription="@string/app_name"
                            />
                    </ViewSwitcher>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/timer_set"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:visibility="gone"
                            android:textSize="16sp"/>
                        <Button
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@drawable/play"
                            android:visibility="gone"
                            android:id="@+id/button3"
                            />

                        <Button
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@drawable/pause"
                            android:visibility="gone"
                            android:id="@+id/button4"

                            />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:padding="5dp"
                    android:gravity="left"
                    android:layout_marginLeft="5dp"
                    android:text="Preferred Contact Method:"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/text_background"
                android:layout_marginTop="10dp">

                <CheckBox
                    android:id="@+id/ctext"
                    android:layout_width="180dp"
                    android:maxWidth="180dp"
                    android:minWidth="180dp"
                    android:layout_height="wrap_content"
                    android:text="Text"
                    android:freezesText="true"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/black" />
                <CheckBox
                    android:id="@+id/cemail"
                    android:layout_width="180dp"
                    android:maxWidth="180dp"
                    android:minWidth="180dp"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:layout_weight="1"
                    android:freezesText="true"
                    android:layout_gravity="right"
                    android:textColor="@color/black"

                    />

                <CheckBox
                    android:id="@+id/cphone"
                    android:layout_width="120dp"
                    android:maxWidth="120dp"
                    android:minWidth="120dp"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:freezesText="true"
                    android:textColor="@color/black"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:visibility="invisible"
                android:background="@drawable/text_background">

                <CheckBox
                    android:id="@+id/cphone1"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="51dp"
                    android:freezesText="true"
                    android:gravity="center"
                    android:maxWidth="160dp"
                    android:minWidth="160dp"
                    android:text="Send Intro Email"
                    android:textColor="@color/black" />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_marginBottom="50dp"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/camera"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/camera"
                    android:gravity="left" />

                <Button
                    android:id="@+id/Save_lead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send"
                    android:onClick="uploadImage"
                    android:gravity="center"
                    android:background="@drawable/button_background"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:visibility="gone"
                        android:layout_marginLeft="15dp"
                        android:textSize="16dp"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:id="@+id/record"
                            android:background="@drawable/record"
                            />
                        <Button
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@drawable/stop"
                            android:visibility="gone"
                            android:id="@+id/button2"/>
                        <Button
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:id="@+id/pauseRecorder"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:visibility="invisible"
                            android:background="@drawable/pause"
                            />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>