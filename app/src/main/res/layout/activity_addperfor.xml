<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/addnewLead"
    android:background="@drawable/background"
    tools:context="com.dzo.prospectWizard.activity.Addperfor">

    <LinearLayout
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:padding="6dp"
        android:paddingStart="0dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="0dp"
        android:orientation="horizontal"
        android:paddingLeft="0dp">
        <ImageView
            android:layout_width="15dp"
            android:id="@+id/backgo"
            android:layout_gravity="center"
            android:background="@drawable/arrow1"
            android:layout_height="20dp" />
        <ImageView
            android:layout_width="30dp"
            android:id="@+id/backgo1"
            android:layout_gravity="center"
            android:background="@drawable/appico3"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/tst"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:padding="3dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="Additional Info"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:layout_marginTop="6dp"
        android:background="#60000000"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="" />

        <EditText
            android:id="@+id/lead_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_background"
            android:gravity="fill_horizontal"
            android:hint="Notes....."
            android:lines="5"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/record"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/record" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/stop"
                    android:visibility="gone" />
            </LinearLayout>
                <Button
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/pause"
                    android:layout_marginTop="5dp"
                    android:visibility="invisible"
                    android:id="@+id/recorderPause"
                    />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="5dp"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/timer_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/play"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/pause"
                    android:visibility="gone"

                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="15dp"
                    android:textSize="16dp"/>




            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/button_background"
            android:text="Submit"
            />

    </LinearLayout>


</LinearLayout>
